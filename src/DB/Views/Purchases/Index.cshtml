@using System.Collections.Generic
@using System.Threading.Tasks
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model System.Collections.Generic.IEnumerable<DB.Models.Purchase>

@{
  ViewData["Title"] = "Index";
}

<h2>Список покупок:</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Good.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Good.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Good.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Good.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PurchaseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PurchaseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PurchaseID">Delete</a> |
                <a asp-action="Buy" asp-route-id="@item.PurchaseID">Купить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
